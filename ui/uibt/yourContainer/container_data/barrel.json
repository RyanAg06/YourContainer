{
	"namespace": "barrel_dx",
	
	/* Top Panel */
	"top_half_panel": 
	{
		"type": "panel",
		"controls":
		[
			/* Title */
			{
				"title_label@chest.chest_label":
				{
					"offset": [8,6],
					"color": "$vdx_container_title_text_color"
				}
			},
			
			/* Grid Slots */
			{
				"grid_slots@chest.small_chest_grid":
				{
					"offset": [7,17],
					"grid_item_template": "common_dx.container_item"
				}
			}
		]
	},

	/* Panel */
	"barrel_panel@common_dx.root_panel":
	{
		"$container_bg": "barrel_textures_dx.barrel",
		"$container_top_half": "barrel_dx.top_half_panel"
	}
}