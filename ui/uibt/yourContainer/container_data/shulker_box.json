{
	"namespace": "shulker_box_dx",
	
	/* Top Panel */
	"top_half_panel":
	{
		"type": "panel",
		"controls":
		[
			/* Title */
			{
				"title_label@chest.chest_label":
				{
					"offset": [8,6],
					"color": "$vdx_container_title_text_color"
				}
			},

			/* Grid Slots */
			{
				"grid_slots@chest.small_chest_grid":
				{
					"offset": [7,17],
					"grid_item_template": "common_dx.container_item"
				}
			}
		]
	},

	/* Panel */
	"shulker_box_panel":
	{
		"type":"panel",
		"controls": 
		[
			{ "selected_item_details_factory@common.selected_item_details_factory": {} },
			{
				"root_panel@common_dx.root_panel":
				{
					"$container_bg": "shulker_box_textures_dx.shulker_box",
					"$container_top_half": "shulker_box_dx.top_half_panel"
				}
			}
		]
	}
}