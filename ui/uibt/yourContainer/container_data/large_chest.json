{
	"namespace": "large_chest_dx",

	/* Top Panel */
	"top_half_panel":
	{
		"type": "panel",
		"controls":
		[
			/* Title */
			{
				"title_label@chest.chest_label":
				{
					"offset": [8,6],
					"color": "$vdx_container_title_text_color"
				}
			},

			/* Grid Slots */
			{
				"grid_slots@chest.large_chest_grid":
				{
					"offset": [7,17],
					"grid_dimensions": [9,6],
					"grid_item_template": "common_dx.container_item"
				}
			}
		]
	},

	/* Panel */
	"large_chest_panel":
	{
		"type":"panel",
		"controls": 
		[
			{ "selected_item_details_factory@common.selected_item_details_factory": {} },
			{
				"root_panel@common_dx.root_panel":
				{
					"size": [176,222],
					"$container_bg": "large_chest_textures_dx.large_chest",
					"$container_top_half": "large_chest_dx.top_half_panel"
				}
			}
		]
	}
}